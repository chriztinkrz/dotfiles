* {
    /* Using surface as the main background (subtle) */
    background: #121316;
    
    /* Text color for main background */
    foreground: #e3e2e6;
    
    /* Primary accent for selected items */
    accent: #aac8f6;
    
    /* Outline for borders */
    muted: #8d9199;
    
    font: "Inter 15";
    background-color: transparent;
    text-color: @foreground;
}

window {
    width: 35%;
    padding: 16px;
    background-color: @background;
    border: 2px;
    border-color: @accent;
    border-radius: 4px;
}

listview {
    lines: 3;
    spacing: 6px;
}

element {
    padding: 8px;
    background-color: transparent;
    text-color: @foreground;
    border-radius: 5px;
}

/* Selected item gets the vibrant primary color background */
element selected {
    background-color: #aac8f6;
    text-color: #0d3157;
}

element-text selected {
    text-color: #0d3157;
}

element-icon {
    size: 0.0ch;
}
